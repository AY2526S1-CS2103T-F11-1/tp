<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5" />
    </padding>
    <Label text="Upcoming Appointments" styleClass="person-view-section-heading" /> <ListView fx:id="upcomingListView" VBox.vgrow="ALWAYS" />
    <Label text="Past Appointments" styleClass="person-view-section-heading" /> <ListView fx:id="pastListView" VBox.vgrow="ALWAYS" />
</VBox>
